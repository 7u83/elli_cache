%% -*- mode: erlang; flycheck-mode: nil -*-
{erl_opts, [debug_info]}.
{deps, [{erlando, "3.1.1"}]}.
{project_plugins,
 [{coveralls, "1.3.0"},
  {rebar3_lint, "0.1.7"}]}.

{xref_checks,
 [undefined_function_calls, undefined_functions, locals_not_used,
  deprecated_function_calls, deprecated_functions]}.

{profiles,
 [{test,
   [{deps,
     [%% TODO: {elli, "2.0.1"},
      {elli,
       {git, "git://github.com/elli-lib/elli.git",
        {branch, "develop"}}}]}]},
  {docs,
   [{erl_opts, [{i, ["_build/test/lib"]}]},
    {edoc_opts,
     [%% FIXME: {dir, "docs"},
      {app_default,"http://www.erlang.org/doc/man"},
      %% {private, true},
      %% FIXME:
      {doc_path,
       ["http://raw.github.com/elli-lib/elli/develop/doc",
        %% FIXME:
        "http://raw.github.com/elli-lib/elli_cache/feature/rfc7232/doc"
       ]}
     ]}
   ]},
  {edown,
   [{deps, [{edown, "0.8.1"}]},
    {edoc_opts,
     [{drmir, "doc"},
      {doclet, edown_doclet},
      {overview, "doc/overview.md"},
      {top_level_readme,
       {"./README.md",
        "https://github.com/elli-lib/elli_cache"}}]}]}]}.

{project_plugins,
 [{coveralls, "1.3.0"},
  {rebar3_lint, "0.1.7"}]}.

{provider_hooks, [{pre, [{eunit, lint}]}]}.

{cover_enabled, true}.
{cover_export_enabled, true}.
{cover_excl_mods, []}.

{coveralls_coverdata, "_build/test/cover/eunit.coverdata"}.
{coveralls_service_name, "travis-ci"}.

{dialyzer,
 %% TODO: underspecs, specdiffs
 [{warnings, [no_contracts, unmatched_returns, error_handling]}]}.
